{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": false,
    "outDir": "./lib",
    "baseUrl": "./src",
    "allowJs": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "../../node_modules", "src/tests"],
  "include": ["./src"]
}